---
const { need } = Astro.props;
---
<section id="need" style="padding:4rem 0;background:white;">
  <div style="max-width:1200px;margin:0 auto;">
    <div style="display:grid;grid-template-columns:repeat(3,1fr);gap:2rem;">
      {need.map((item, i) => (
        <div style="background:#f3f4f6;padding:2rem;border-radius:1rem;text-align:center;box-shadow:0 2px 8px rgba(0,0,0,0.04);">
          {item.icon && <img src={item.icon} alt="" style="height:48px;margin-bottom:1rem;" />}
          <h3 style="font-size:1.25rem;font-weight:700;">{item.title}</h3>
          <p style="color:#555;margin-top:0.5rem;">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section> 