---
const { faq } = Astro.props;
let openIndex = -1;
function toggle(index) {
  openIndex = openIndex === index ? -1 : index;
}
---
<section id="faq" style="padding:4rem 0;background:white;">
  <div style="max-width:800px;margin:0 auto;">
    <h2 style="text-align:center;font-size:2rem;font-weight:800;margin-bottom:2rem;">Frequently Asked Questions</h2>
    <div>
      {faq.map((item, i) => (
        <details style="margin-bottom:1.5rem;border-radius:1rem;box-shadow:0 2px 8px rgba(0,0,0,0.04);background:#f9fafb;padding:1rem 1.5rem;" {open:openIndex===i} onClick={() => toggle(i)}>
          <summary style="font-weight:700;font-size:1.1rem;cursor:pointer;">{item.question}</summary>
          <div style="margin-top:0.75rem;color:#555;">{item.answer}</div>
        </details>
      ))}
    </div>
  </div>
</section> 