---
const { trustedBy } = Astro.props;
---
<section id="trusted-by" style="padding:2rem 0;background:#f9fafb;">
  <div style="max-width:1200px;margin:0 auto;text-align:center;">
    <h2 style="font-size:1.5rem;font-weight:700;">{trustedBy.title}</h2>
    <p style="margin:0.5rem 0 2rem 0;color:#666;">{trustedBy.subtitle}</p>
    <div style="display:grid;grid-template-columns:repeat(4,1fr);gap:2rem;align-items:center;justify-items:center;">
      {trustedBy.logos.map((logo, i) => logo && <img src={logo} alt={`Trusted logo ${i+1}`} style="max-height:48px;max-width:120px;object-fit:contain;" />)}
    </div>
  </div>
</section> 