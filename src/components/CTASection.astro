---
const { ctaSection } = Astro.props;
---
<section id="cta" style="padding:3rem 0;background:#2563eb;color:white;text-align:center;">
  <div style="max-width:700px;margin:0 auto;">
    <h2 style="font-size:2rem;font-weight:800;">{ctaSection.title}</h2>
    <p style="margin:1rem 0 2rem 0;font-size:1.2rem;">{ctaSection.description}</p>
    <a href={ctaSection.buttonLink} style="display:inline-block;padding:0.75rem 2rem;background:white;color:#2563eb;font-weight:700;border-radius:2rem;font-size:1.1rem;text-decoration:none;box-shadow:0 2px 8px rgba(0,0,0,0.08);">{ctaSection.buttonText}</a>
  </div>
</section> 