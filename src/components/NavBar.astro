---
const { navigation } = Astro.props;
---
<nav style="position:fixed;top:2rem;left:50%;transform:translateX(-50%);background:white;border-radius:2rem;box-shadow:0 2px 12px rgba(0,0,0,0.08);padding:0.5rem 2rem;display:flex;align-items:center;z-index:1000;min-width:300px;">
  <img src={navigation.logo} alt="Logo" style="height:2.5rem;width:2.5rem;border-radius:50%;margin-right:1rem;" />
  <span style="font-weight:700;font-size:1.25rem;">{navigation.companyName}</span>
</nav> 