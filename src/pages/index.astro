---
import { getSiteContent } from '../utils/contentLoader';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
import TrustedBySection from '../components/TrustedBySection.astro';
import NeedSection from '../components/NeedSection.astro';
import SolutionSection from '../components/SolutionSection.astro';
import CTASection from '../components/CTASection.astro';
import TestimonialSection from '../components/TestimonialSection.astro';
import GallerySection from '../components/GallerySection.astro';
import FAQSection from '../components/FAQSection.astro';
import Footer from '../components/Footer.astro';
import FooterSection from '../components/FooterSection.astro';
import LeadForm from '../components/LeadForm.astro';
import FeaturesSection from '../components/FeaturesSection.astro';
import ReviewsSection from '../components/ReviewsSection.astro';
import ProductSpecsSection from '../components/ProductSpecsSection.astro';
import SEO from '../components/SEO.astro';
const content = getSiteContent();
---

<Header />
<HeroSection hero={content.hero} />
<FeaturesSection />
<ReviewsSection />
<ProductSpecsSection />
<TrustedBySection trustedBy={content.trustedBy} />
<NeedSection need={content.need} />
<SolutionSection solution={content.solution} />
<CTASection ctaSection={content.ctaSection} />
<LeadForm form={content.form} />
<TestimonialSection testimonials={content.testimonials} />
<GallerySection gallery={content.gallery} />
<FAQSection faq={content.faq} />
<FooterSection />

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={content.seo.favicon || '/favicon.svg'} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{content.seo.title || 'Astro'}</title>
		<meta name="description" content={content.seo.description} />
		<SEO />
	</head>
	<body>
		<section id="hero">
			<h1>{content.hero.title}</h1>
			<p>{content.hero.subtitle}</p>
		</section>
	</body>
</html>
